<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.tm.s5.notice.NoticeDAO">

	<sql id="search">
		like '%' || #{search} || '%'
	</sql>

	<insert id="boardWrite" parameterType="com.tm.s5.notice.NoticeVO">
		insert into notice values(board_seq.nextVal,#{title},#{writer},#{contents},sysdate,0)
	</insert>
	
	<delete id="boardDelete" parameterType="java.lang.Long">
		delete from notice where num = #{num}
	</delete>
	
	<update id="boardUpdate" parameterType="com.tm.s5.notice.NoticeVO">
		update notice set title=#{title}, writer=#{writer}, contents=#{contents} where num=#{num}
	</update>
	
	<update id="hitUpdate" parameterType="java.lang.Long">
		update notice set hit = hit+1 where num=#{num}
	</update>
	
	<select id="boardSelect" parameterType="java.lang.Long" resultType="com.tm.s5.notice.NoticeVO">
		select * from notice where num=#{num}
	</select>
	
	<select id="boardList" resultType="com.tm.s5.notice.NoticeVO" parameterType="com.tm.s5.board.page.Pager">
		select * from 
			(select N.*, rownum R from 
				(select * from notice where 
				
				<choose>
					<when test="kind == 'bw'">
						writer
					</when>
					<when test="kind == 'bt'">
						title 
					</when>
					<otherwise>
						contents 
					</otherwise>
				</choose>
				
				<include refid="search"></include> and num>=1 order by num desc)N) 
		where R between #{startRow} and #{lastRow}
	</select>
	
	<select id="boardCount" parameterType="com.tm.s5.board.page.Pager" resultType="java.lang.Long">
		select count(num) from notice 
				
				<where>
					<if test="kind == 'bw'">
						writer <include refid="search"></include>
					</if>
					<if test="kind == 'bt'">
						title <include refid="search"></include>
					</if>
					<if test="kind == 'bc'">
						contents <include refid="search"></include>
					</if>
				</where>
				
				
<!-- 				<choose> -->
<!-- 					<when test="kind == 'bw'"> -->
<!-- 						writer -->
<!-- 					</when> -->
<!-- 					<when test="kind == 'bt'"> -->
<!-- 						title -->
<!-- 					</when> -->
<!-- 					<otherwise> -->
<!-- 						contents -->
<!-- 					</otherwise> -->
<!-- 				</choose> -->
				
				
	</select>

</mapper>





















